<%- include('partials/header.ejs') %>
<div class="ui main text container segment">
    <div class="ui huge header">
        RESTful BLOG APP
    <div>
    <div class="ui top attached segment">
        <div class="ui divided items">
            <% blogs.forEach(function(blogs){ %>
                <div class="item">
                    <div class="image">
                        <img src="<%= blogs.image %>" alt="alt">
                    </div>
                    <div class="content">
                        <a href="/blogs/<%= blogs._id %>" class="header"><%= blogs.title %></a>
                        <div class="meta">
                            <span><%= blogs.created.toDateString() %></span>
                        </div>
                        <div class="description">
                            <p><%- blogs.body.substring(0,100) %>...</p>
                        </div>
                        <div class="extra">
                            <a href="/blogs/<%= blogs._id %>" class="ui floated basic violet button">Read More <i class="right chevron icon"></i></a>
                        </div>
                    </div>
                </div>
           
            
            
            
            
            <% })    %>
        </div>
    </div>
        

</div>



<%- include('partials/footer.ejs') %>